<div class="page row">
  <div class="col s12 page-content">
    <div class="row">
      <div class="col m12 l4">
        <div class="center-align hide-on-large-only">
          <%=raw @page.content_for(:side_body) %>
        </div>
        <div class="valign-wrapper right hide-on-med-and-down">
          <%=raw @page.content_for(:side_body) %>
        </div>
      </div>
      <div class="page-content col m12 l8">
        <h2 class="header"><%=raw @page.title %></h2>
        <%=raw @page.content_for(:body) %>
      </div>
    </div>
  </div>
</div>
