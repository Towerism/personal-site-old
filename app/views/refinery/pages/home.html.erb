<div class="page"> 
  <div class="col s12 page-content">
    <div class="row">
      <div class="center-block hide-on-large-only">
        <div class="center-align">
          <%=raw @page.content_for(:side_body) %>
        </div>
      </div>
      <div class="col l4 hide-on-med-and-down">
        <div class="right-align">
          <%=raw @page.content_for(:side_body) %>
        </div>
      </div>
      <div class="page-content col m12 l8">
        <h2 class="header"><%=raw @page.title %></h2>
        <%=raw @page.content_for(:body) %>
      </div>
    </div>
  </div>
</div>
